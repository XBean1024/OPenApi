<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.design.widget.AppBarLayout
        android:id="@+id/header_vg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <android.support.design.widget.CollapsingToolbarLayout
            app:layout_scrollFlags="scroll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <com.scwang.wave.MultiWaveHeader
                    android:id="@+id/waveHeader"
                    android:layout_width="match_parent"
                    android:layout_height="250dp" />

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/header"
                    android:layout_width="wrap_content"
                    android:layout_height="96dp"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="@dimen/value_30dp"
                    android:src="@mipmap/header"
                    app:civ_border_color="#FF000000"
                    app:civ_border_width="2dp" />

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/header"
                    android:layout_marginTop="@dimen/value_10dp"
                    android:gravity="center"
                    android:shadowColor="@color/darkorange"
                    android:shadowDx="0"
                    android:shadowDy="0"
                    android:shadowRadius="25"
                    android:text="欧阳慕远"
                    android:textColor="@color/white"
                    android:textSize="@dimen/value_20sp"
                    android:textStyle="italic" />
            </RelativeLayout>
        </android.support.design.widget.CollapsingToolbarLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center"
            android:text="悬浮的部分" />
    </android.support.design.widget.AppBarLayout>
    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            style="@style/app_setting_container">
            <TextView
                style="@style/app_setting_text_left"
                android:drawableLeft="@mipmap/clear"
                android:text="   清除缓存" />

            <TextView style="@style/app_setting_text_right" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/test2"
            style="@style/app_setting_container">
            <TextView
                style="@style/app_setting_text_left"
                android:drawableLeft="@mipmap/clear"
                android:text="   test2" />

            <TextView style="@style/app_setting_text_right" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_clear_cache"
            style="@style/app_setting_container">

            <TextView
                style="@style/app_setting_text_left"
                android:drawableLeft="@mipmap/clear"
                android:text="   清除缓存" />

            <TextView
                android:id="@+id/tv_cache_size"
                style="@style/app_setting_text_right" />
        </RelativeLayout>
    </LinearLayout>
    </android.support.v4.widget.NestedScrollView>

</android.support.design.widget.CoordinatorLayout>