<?xml version="1.0" encoding="utf-8"?>
<com.binny.openapi.widget.titlebar.SimpleTitleBar xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/simple_title_bar"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:background="@color/crimson">

    <TextView
        android:id="@+id/simple_left_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:drawableLeft="@mipmap/back"
        android:gravity="center|left"
        android:text="返回"
        android:textColor="@color/white" />

    <TextView
        android:id="@+id/simple_title"
        android:layout_width="200dp"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:singleLine="true"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:text="标题"
        android:textIsSelectable="true"
        android:textColor="@color/white" />
    <TextView
        android:id="@+id/simple_right_btn"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_alignParentEnd="true"
        android:drawableEnd="@mipmap/share"
        android:gravity="center|right"/>
</com.binny.openapi.widget.titlebar.SimpleTitleBar>