<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/line_red_packet_share"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="17dp">

        <View
            android:layout_width="74dp"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:layout_marginRight="9dp"
            android:layout_toLeftOf="@id/red_packet_share_text"
            android:background="#dddddd" />

        <TextView
            android:id="@+id/red_packet_share_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="和好友一起共享红包雨"
            android:textColor="#999999"
            android:textSize="14sp"/>

        <View
            android:layout_width="74dp"
            android:layout_height="1px"
            android:layout_centerVertical="true"
            android:layout_marginLeft="9dp"
            android:layout_toRightOf="@id/red_packet_share_text"
            android:background="#dddddd" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@id/line_red_packet_share"
        android:layout_centerVertical="true"
        android:layout_marginLeft="90dp"
        android:layout_marginTop="23dp">

        <ImageView
            android:id="@+id/weixin_idcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/weixin" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weixin_idcon"
            android:layout_marginTop="@dimen/value_10dp"
            android:textColor="#333333"
            android:text="微信好友"
            android:textSize="16sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/red_packet_share_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/line_red_packet_share"
        android:layout_centerVertical="true"
        android:layout_marginRight="90dp"
        android:layout_marginTop="23dp">

        <ImageView
            android:id="@+id/weixin_f_idcon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:src="@drawable/weiixn_friends" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/weixin_f_idcon"
            android:layout_centerHorizontal="true"
            android:textColor="#333333"
            android:layout_marginTop="@dimen/value_10dp"
            android:text="朋友圈"
            android:textSize="16sp" />
    </RelativeLayout>

    <View
        android:id="@+id/ren_packet_line"
        android:background="#ffe7e2"
        android:layout_marginTop="25dp"
        android:layout_below="@id/red_packet_share_icon"
        android:layout_width="match_parent"
        android:layout_height="10dp"/>
    <TextView
        android:layout_below="@id/ren_packet_line"
        android:layout_width="match_parent"
        android:gravity="center"
        android:textSize="15sp"
        android:text="取消"
        android:textColor="#333333"
        android:layout_height="50dp" />
</RelativeLayout>