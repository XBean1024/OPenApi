<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/value_20dp"
    android:id="@+id/article_card_view"
    card_view:cardBackgroundColor="@color/deepskyblue"
    card_view:cardCornerRadius="@dimen/value_8dp"
    card_view:cardElevation="5dp"
    card_view:contentPadding="8dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/article_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_10dp"
            android:text="时间:20180205"
            android:textColor="@color/white"
            android:textSize="@dimen/value_10sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/article_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_10dp"
            android:layout_toRightOf="@id/article_time"
            android:text="作者:欧阳慕远"
            android:textColor="@color/white"
            android:textSize="@dimen/value_10sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/article_character_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="@dimen/value_10dp"
            android:gravity="center|left"
            android:text="（字数）"
            android:textColor="@color/white"
            android:textSize="@dimen/value_10sp"
            android:textStyle="bold|italic" />

        <TextView
            android:id="@+id/article_digest"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@id/article_time"
            android:layout_marginLeft="@dimen/value_10dp"
            android:layout_marginRight="@dimen/value_20dp"
            android:layout_marginTop="@dimen/value_10dp"
            android:ellipsize="end"
            android:maxLines="3"
            android:text=" "
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/article_author"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/article_digest"
            android:layout_marginRight="@dimen/value_10dp"
            android:layout_marginTop="@dimen/value_10dp"
            android:gravity="left|center"
            android:text="《欧阳慕远》"
            android:textColor="@color/white"
            android:textSize="@dimen/value_10sp"
            android:textStyle="bold|italic" />
    </RelativeLayout>
</android.support.v7.widget.CardView>
