<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/login_bg"
    tools:context=".mvp.ui.activity.login.LoginActivity">

    <com.binny.openapi.widget.SplashVideoView
        android:id="@+id/login_video"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="20dp"
        android:orientation="vertical">
        <com.binny.openapi.widget.KeyValueLayout
            android:layout_marginTop="200dp"
            android:id="@+id/login_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:key_name="账号："
            app:value_text="18221869856"
            app:value_hint="  必填"
            app:value_length="11" />

        <com.binny.openapi.widget.KeyValueLayout
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:key_name="密码："
            app:value_text="123456"
            app:value_hint="  必填"
            app:value_length="6" />

        <Button
            android:onClick="login"
            android:layout_marginTop="20dp"
            style="?android:textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/login_shape"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:text= "@string/action_sign_in"
            android:alpha="0.9"
            android:textColor="@color/white"
            android:textStyle="bold" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <TextView
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:text="@string/forget_password"
                android:textColor="@color/colorBlue"
                android:textSize="18sp" />

            <TextView
                android:onClick="toRegister"
                android:textStyle="bold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:text="@string/register_new"
                android:textColor="@color/colorBlue"
                android:textSize="18sp" />

        </RelativeLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="50dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp" />
</RelativeLayout>

