<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    tools:openDrawer="start">

    <FrameLayout
        android:background="@color/pink"
        android:layout_above="@id/line"
        android:id="@+id/fm_contariner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <View
        android:id="@+id/line"
        android:layout_above="@id/rg_main"
        android:layout_width="match_parent"
        android:background="@color/grey"
        android:layout_height="1dp" />
    <RadioGroup
        android:layout_alignParentBottom="true"
        android:id="@+id/rg_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FFFFFF"
        android:orientation="horizontal">

        <RadioButton
            android:id="@+id/rb_home"
            style="@style/bottom_btn_style"
            android:checked="true"
            android:drawableTop="@drawable/home_selector"
            android:text="首页" />

        <RadioButton
            android:id="@+id/rb_music"
            style="@style/bottom_btn_style"
            android:drawableTop="@drawable/musci_selector"
            android:text="音乐" />

        <RadioButton
            android:id="@+id/rb_picture"
            style="@style/bottom_btn_style"
            android:drawableTop="@drawable/picture_selector"
            android:text="美图" />

        <RadioButton
            android:id="@+id/rb_video"
            style="@style/bottom_btn_style"
            android:drawableTop="@drawable/video_selector"
            android:text="视频" />

        <RadioButton
            android:id="@+id/rb_mine"
            style="@style/bottom_btn_style"
            android:drawableTop="@drawable/mine_selector"
            android:text="我的" />
    </RadioGroup>
</RelativeLayout>
