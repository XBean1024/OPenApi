<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--半沉浸式,带状态栏-->
    <style name="TransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--导航栏透明-->
        <item name="android:windowTranslucentNavigation">true</item>
        <!--状态栏透明-->
        <!--<item name="android:windowTranslucentStatus">true</item>-->
        <!--<item name="android:windowNoTitle">true</item>-->
    </style>

    <style name="FullScreenTheme" parent="@style/TransparentTheme">
        <item name="android:windowBackground">@color/transparent</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Translucent</item>
    </style>

    <color name="transparent">#88242424</color>
    <style name="bottom_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@drawable/bottom_text_color</item>
    </style>

    <!--设置  中的-->
    <style name="app_setting_card_view">
        <item name="android:background">@color/mediumturquoise</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/value_10dp</item>
        <item name="android:layout_marginRight">@dimen/value_10dp</item>
        <item name="android:layout_marginBottom">@dimen/value_10dp</item>
    </style>
    <style name="app_setting_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/value_45dp</item>
        <item name="android:layout_marginLeft">@dimen/value_10dp</item>
        <item name="android:layout_marginRight">@dimen/value_10dp</item>
        <item name="android:layout_marginBottom">@dimen/value_10dp</item>
        <item name="android:background">@drawable/setting_shape</item>
    </style>
    <style name="app_setting_text_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/value_10dp</item>
        <item name="android:textSize">@dimen/value_16sp</item>
        <item name="android:textColor">@color/antiquewhite</item>
    </style>
    <style name="app_setting_text_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginEnd">@dimen/value_10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">10.25M</item>
        <item name="android:textColor">@color/antiquewhite</item>

    </style>


</resources>
