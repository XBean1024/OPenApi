<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--上下交错效果-->
    <style name="slide_up_down" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_up_in</item>
        <item name="android:windowExitAnimation">@anim/slide_down_out</item>
    </style>
    <!--淡入淡出效果-->
    <style name="fade_in_out" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/fade_in</item>
        <item name="android:windowExitAnimation">@anim/fade_out</item>
    </style>
    <!--放大淡出效果-->
    <style name="scale_in_alpha_out" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/scale_in</item>
        <item name="android:windowExitAnimation">@anim/alpha_out</item>
    </style>
    <!--压缩变小淡出效果-->
    <style name="hyperspace_in_out" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/hyperspace_in</item>
        <item name="android:windowExitAnimation">@anim/hyperspace_out</item>
    </style>
    <!--右往左推出效果-->
    <style name="push_left_in_out" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_left_in</item>
        <item name="android:windowExitAnimation">@anim/push_left_out</item>
    </style>
    <!--下往上推出效果-->
    <style name="push_up_in_out" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/push_up_in</item>
        <item name="android:windowExitAnimation">@anim/push_up_out</item>
    </style>
    <!--左右交错效果-->
    <style name="slide_left_right" mce_bogus="1" parent="android:Animation">
        <item name="android:windowEnterAnimation">@anim/slide_left</item>
        <item name="android:windowExitAnimation">@anim/slide_right</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
    <!--半沉浸式,带状态栏-->
    <style name="TransparentTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!--导航栏透明-->
        <item name="android:windowTranslucentNavigation">true</item>
        <!--状态栏透明-->
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowNoTitle">true</item>
    </style>

    <style name="FullScreenTheme" parent="@style/AppTheme.NoActionBar">

        <item name="android:windowFullscreen">true</item>

        <item name="android:windowIsTranslucent">true</item>
    </style>

    <color name="transparent">#88242424</color>

    <style name="bottom_btn_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:button">@null</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingBottom">5sp</item>
        <item name="android:paddingTop">5sp</item>
        <item name="android:textSize">10sp</item>
        <item name="android:textColor">@drawable/bottom_text_color</item>
    </style>

    <!--设置  中的-->
    <style name="app_setting_card_view">
        <item name="android:background">@color/mediumturquoise</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">@dimen/value_10dp</item>
        <item name="android:layout_marginRight">@dimen/value_10dp</item>
        <item name="android:layout_marginBottom">@dimen/value_10dp</item>
    </style>

    <style name="app_setting_container">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/value_45dp</item>
        <item name="android:layout_marginLeft">@dimen/value_10dp</item>
        <item name="android:layout_marginRight">@dimen/value_10dp</item>
        <item name="android:layout_marginBottom">@dimen/value_10dp</item>
        <item name="android:background">@drawable/setting_shape</item>
    </style>

    <style name="app_setting_text_left">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingLeft">@dimen/value_10dp</item>
        <item name="android:textSize">@dimen/value_16sp</item>
        <item name="android:textColor">@color/antiquewhite</item>
    </style>

    <style name="app_setting_text_right">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_alignParentRight">true</item>
        <item name="android:layout_marginEnd">@dimen/value_10dp</item>
        <item name="android:gravity">center</item>
        <item name="android:text">10.25M</item>
        <item name="android:textColor">@color/antiquewhite</item>

    </style>

    <style name="app_home_tab_text">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <!--自定义dialog背景全透明无边框theme -->
    <style name="app_article_deatil_dialog_style" parent="android:style/Theme.Dialog">
        <!--背景颜色及和透明程度-->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!--是否去除标题 -->
        <item name="android:windowNoTitle">true</item>
        <!--是否去除边框-->
        <item name="android:windowFrame">@null</item>
        <!--是否浮现在activity之上-->
        <item name="android:windowIsFloating">true</item>
        <!--是否模糊-->
        <item name="android:backgroundDimEnabled">false</item>
    </style>

    <style name="app_splash_activity">
        <item name="android:background">@mipmap/fore_head</item>
    </style>
</resources>
